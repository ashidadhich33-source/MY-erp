# API Configuration
REACT_APP_API_BASE_URL=http://localhost:8000/api/v1
REACT_APP_ENVIRONMENT=development

# Application Configuration
REACT_APP_NAME="Loyalty & Affiliate Management System"
REACT_APP_VERSION=1.0.0

# Features Toggle (true/false)
REACT_APP_ENABLE_WHATSAPP=true
REACT_APP_ENABLE_ERP_INTEGRATION=true
REACT_APP_ENABLE_ANALYTICS=true

# File Upload Configuration
REACT_APP_MAX_FILE_SIZE=10485760  # 10MB in bytes
REACT_APP_ALLOWED_FILE_TYPES=image/*,application/pdf,.doc,.docx,.txt

# Development Configuration
GENERATE_SOURCEMAP=true
SKIP_PREFLIGHT_CHECK=true