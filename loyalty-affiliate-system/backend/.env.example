# Backend Environment Configuration
# Copy this file to .env and update with your local settings

# Database Configuration (Local PostgreSQL)
DATABASE_URL=postgresql://loyalty_user:loyalty_password@localhost:5432/loyalty_db

# Security Settings
SECRET_KEY=your-super-secret-key-change-this-in-production-minimum-32-characters
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7
ENVIRONMENT=development

# CORS Settings (for frontend access)
BACKEND_CORS_ORIGINS=http://localhost:3000,http://localhost:5173,http://127.0.0.1:3000

# Logic ERP Integration (Local MSSQL)
ERP_HOST=localhost
ERP_PORT=1433
ERP_DATABASE=master
ERP_USERNAME=sa
ERP_PASSWORD=ATPL@123
ERP_DRIVER=ODBC Driver 17 for SQL Server

# WhatsApp Integration (Optional)
WHATSAPP_API_URL=https://graph.facebook.com/v17.0
WHATSAPP_ACCESS_TOKEN=your-whatsapp-access-token
WHATSAPP_VERIFY_TOKEN=your-whatsapp-verify-token
WHATSAPP_PHONE_NUMBER_ID=your-phone-number-id

# Email Configuration (Optional)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USERNAME=your-email@gmail.com
EMAIL_PASSWORD=your-app-password
EMAIL_FROM=noreply@yourcompany.com
EMAILS_FROM_NAME=Loyalty System

# Redis Configuration (Optional - for caching)
REDIS_URL=redis://localhost:6379

# Logging Configuration
LOG_LEVEL=INFO

# API Configuration
API_V1_STR=/api/v1
SERVER_NAME=localhost
SERVER_HOST=http://localhost

# Rate Limiting (requests per minute)
RATE_LIMIT_PER_MINUTE=100

# File Upload Settings
MAX_UPLOAD_SIZE=10485760  # 10MB in bytes
ALLOWED_EXTENSIONS=jpg,jpeg,png,pdf,doc,docx