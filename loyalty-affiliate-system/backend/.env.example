# Database Configuration
DATABASE_URL=postgresql://loyalty_user:loyalty_password@localhost:5432/loyalty_db

# Redis Configuration
REDIS_URL=redis://localhost:6379

# Security Configuration
SECRET_KEY=your-super-secret-key-here-change-this-in-production
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
ENVIRONMENT=development

# CORS Configuration (comma-separated origins)
BACKEND_CORS_ORIGINS=http://localhost:3000,http://localhost:5173

# Demo Credentials (for development only)
DEMO_ADMIN_EMAIL=admin@example.com
DEMO_ADMIN_PASSWORD=demo_admin_123
DEMO_USER_EMAIL=user@example.com
DEMO_USER_PASSWORD=demo_user_123

# ERP Integration (optional)
ERP_HOST=your-erp-host.com
ERP_PORT=8080
ERP_DATABASE=erp_db
ERP_USERNAME=erp_user
ERP_PASSWORD=erp_password
ERP_API_KEY=your-erp-api-key

# WhatsApp Integration (optional)
WHATSAPP_API_URL=https://graph.facebook.com/v17.0
WHATSAPP_ACCESS_TOKEN=your-whatsapp-access-token
WHATSAPP_VERIFY_TOKEN=your-whatsapp-verify-token
WHATSAPP_PHONE_NUMBER_ID=your-phone-number-id

# Email Configuration
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USERNAME=your-email@gmail.com
EMAIL_PASSWORD=your-app-password
EMAIL_FROM=noreply@yourcompany.com

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=logs/app.log

# File Upload Configuration
MAX_UPLOAD_SIZE=10485760  # 10MB in bytes
UPLOAD_DIR=uploads/

# Rate Limiting
RATE_LIMIT_PER_MINUTE=100